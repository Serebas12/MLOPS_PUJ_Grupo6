# Usa una imagen base de TensorFlow con Python 3.9
FROM tensorflow/tensorflow:2.15.0

# Instala dependencias del sistema
RUN apt-get update && apt-get install -y \
    python3-pip \
    python3-dev \
    && rm -rf /var/lib/apt/lists/*

# Actualiza pip a la última versión
RUN python3 -m pip install --upgrade pip

# Instala Jupyter Lab
RUN pip install --no-cache-dir jupyterlab

# Instala TFX y dependencias compatibles
RUN pip install --no-cache-dir \
    tfx==1.16.0 \
    tensorflow-transform==1.16.0 \
    tensorflow-data-validation==1.16.1 \
    apache-beam[gcp]==2.50.0 \
    pandas \
    numpy \
    matplotlib \
    seaborn \
    scikit-learn

# Configura el directorio de trabajo
WORKDIR /workspace

# Expone el puerto de Jupyter
EXPOSE 8888

# Comando de inicio de Jupyter Lab
CMD ["jupyter", "lab", "--ip=0.0.0.0", "--port=8888", "--no-browser", "--allow-root"]
